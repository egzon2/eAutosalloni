@model List<Category>

    <style>
       @* .wrapperTable {
            margin-top: 10vh;
            margin-right: auto; /* 1 */
            margin-left: auto; /* 1 */

            max-width: 60%; /* 2 */

            padding-right: 10px; /* 3 */
            padding-left: 10px; /* 3 */
        }*@

        .dataTables_length {
            color: white;
        }

        .dataTables_filter {
            color: white;
        }

        .dataTables_info {
            color: white;
        }

        #tblData_wrapper {
            margin-left: 5%;
            margin-right: 5%;
        }

        body {
            padding-left : 20px;    
            background: rgba(219,21,99,0.8);
            background: #0F2027; /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #2C5364, #203A43, #0F2027); /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #2C5364, #203A43, #0F2027); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }
        
        
    </style>


    <h1 style="text-align:center; margin-top: 5vh; color:white;">Categories</h1>
    <a  class="btn btn-secondary" style="width: 250px; height:50px; margin-left: auto; margin-right: auto;" asp-action="Create">Create new category</a>
    <div class="backgroundColoring">
        <table id="tblData" class="table wrapperTable" style="background: white;color: #000000; ">

            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>                      
                        <td>
                            <a type="button" class="btn btn-primary" asp-action="Update" asp-route-Id="@item.Id" style="color:white;">Update</a>
                            <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id" style="color:white;">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
   
    </div>

@section Scripts {
<script>
    $(document).ready(function () {
        $('#tblData').DataTable();

    });
    </script>
    
}

